FORM get_airline_name  USING VALUE(p_code)
                       CHANGING VALUE(p_text).
  CLEAR p_text.
  SELECT SINGLE carrname
    from scarr
    INTO p_text
    WHERE carrid = p_code.

ENDFORM.
