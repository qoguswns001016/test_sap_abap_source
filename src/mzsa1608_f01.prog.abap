*&---------------------------------------------------------------------*
*& Include          MZSA1608_F01
*&---------------------------------------------------------------------*
*&---------------------------------------------------------------------*
*& Form get_emp_name
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*&      --> ZSSA1673_PERNR
*&      <-- ZSSA1673_ENMAE
*&---------------------------------------------------------------------*
FORM get_emp_name  USING VALUE(p_pernr)
                   CHANGING p_ename.
  select SINGLE ename
        from ztsa1601
        into p_ename
        WHERE pernr = p_pernr.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form get_emp_info
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*&      --> ZSSA1673_PERNR
*&      <-- ZSSA1670_EMP
*&---------------------------------------------------------------------*
FORM get_emp_info  USING VALUE(p_pernr)
                   CHANGING p_empinfo TYPE zssa1670_emp.
  select SINGLE *
    from ztsa1601
    into  CORRESPONDING FIELDS OF p_empinfo
    WHERE pernr = p_pernr.

ENDFORM.
