<mvc:View controllerName="sync.navi01.controller.View1"                                                                                                                                                                                                        
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"                                                                                                                                                                                                            
    xmlns="sap.m">                                                                                                                                                                                                                                             
    <Page id="page" title="{i18n>title}">                                                                                                                                                                                                                      
        <content>                                                                                                                                                                                                                                              
            <Table id="idTabScarr" items="{/scarrSet}" >                                                                                                                                                                                                       
                    <columns>                                                                                                                                                                                                                                  
                        <Column><header><Text text="Airline ID"/></header></Column>                                                                                                                                                                            
                        <Column><header><Text text="Airline Name"/></header></Column>                                                                                                                                                                          
                    </columns>                                                                                                                                                                                                                                 
                    <items>                                                                                                                                                                                                                                    
                        <ColumnListItem press="onTableItemClick" type="Active">                                                                                                                                                                                
                            <cells>                                                                                                                                                                                                                            
                                <Text text="{Carrid}"/>                                                                                                                                                                                                        
                                <Text text="{Carrname}"/>                                                                                                                                                                                                      
                            </cells>                                                                                                                                                                                                                           
                        </ColumnListItem>                                                                                                                                                                                                                      
                    </items>                                                                                                                                                                                                                                   
            </Table>                                                                                                                                                                                                                                           
        </content>                                                                                                                                                                                                                                             
    </Page>                                                                                                                                                                                                                                                    
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               