MODULE user_command_0100 INPUT.
  CASE gv_okcode.
    WHEN 'CREATE'.
      clear gv_okcode.
      PERFORM create_row.
    WHEN 'SAVE'.
      clear gv_okcode.
      PERFORM save_data.
  ENDCASE.
ENDMODULE.
